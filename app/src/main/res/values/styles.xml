<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavTextAppearance">
        <item name="android:fontFamily">@font/satoshi_medium</item> <!-- e.g., @font/roboto_medium -->
        <item name="android:textSize">12sp</item> <!-- Adjust size if needed -->
        <item name="android:textAllCaps">false</item> <!-- Disable uppercase if needed -->
    </style>

    <style name="BottomNavTextAppearanceActive">
        <item name="android:fontFamily">@font/satoshi_bold</item> <!-- e.g., @font/roboto_medium -->
        <item name="android:textSize">12sp</item> <!-- Adjust size if needed -->
        <item name="android:textAllCaps">false</item> <!-- Disable uppercase if needed -->
    </style>

    <style name="NoHighlightBottomNavTheme" parent="ThemeOverlay.Material3.BottomNavigationView">
        <!-- Disable ALL selection indicators -->
        <item name="itemShapeAppearanceOverlay">@style/NoShapeAppearance</item>
        <item name="itemShapeFillColor">@android:color/transparent</item>
    </style>

    <style name="NoShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item> <!-- Kills the rounded highlight -->
    </style>

    <style name="DrawerTextAppearance">
        <item name="android:fontFamily">@font/sentient_medium</item> <!-- e.g., @font/roboto_medium -->
        <item name="android:textSize">20sp</item> <!-- Adjust size if needed -->
        <item name="android:textAllCaps">false</item> <!-- Disable uppercase if needed -->
        <item name="android:textColor">@color/text</item>
    </style>

</resources>