<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingHorizontal="15dp"

    >

    <!-- Title -->
    <TextView
        android:id="@+id/titleAlbum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Ride Through Madness ðŸš€"
        android:paddingBottom="20dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/satoshi_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Left Background Cover -->
    <ImageView
        android:id="@+id/imgAlbumBack1"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/astro"
        android:alpha="0.4"
        android:translationX="-50dp"
        android:translationY="15dp"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toBottomOf="@id/titleAlbum2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Right Background Cover -->
    <ImageView
        android:id="@+id/imgAlbumBack2"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/astro"
        android:alpha="0.6"
        android:translationX="50dp"
        android:translationY="15dp"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toTopOf="@id/imgAlbumBack1"
        app:layout_constraintStart_toStartOf="@id/imgAlbumBack1"
        app:layout_constraintEnd_toEndOf="@id/imgAlbumBack1"/>

    <!-- Foreground Album Cover -->
    <ImageView
        android:id="@+id/imgAlbum2"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/astro"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toTopOf="@id/imgAlbumBack2"
        app:layout_constraintStart_toStartOf="@id/imgAlbumBack2"
        app:layout_constraintEnd_toEndOf="@id/imgAlbumBack2"/>

    <!-- Play Button -->
    <ImageView
        android:id="@+id/btnPlay2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_button_background"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play_button"
        app:layout_constraintBottom_toBottomOf="@id/imgAlbum2"
        app:layout_constraintEnd_toEndOf="@id/imgAlbum2"
        android:onClick="openSpotifyAlbum"/>

    <!-- Description -->
    <TextView
        android:id="@+id/descText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travis Scott unleashes a psychedelic rollercoaster in ASTROWORLD. The album blends wild production with hypnotic energy, delivering an unforgettable ride through sound and emotion."
        android:textSize="14sp"
        android:fontFamily="@font/satoshi_regular"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imgAlbum2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Info Section -->
    <LinearLayout
        android:id="@+id/infoContainer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/descText2"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Artist -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_artist"
                app:tint="#858585"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travis Scott"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Songs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_song"
                app:tint="#858585"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 Songs"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Reviews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_reviews"
                app:tint="#858585"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2M Reviews"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
