<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingHorizontal="15dp"

    >

    <!-- 3rd Album -->
    <TextView
        android:id="@+id/titleAlbum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emotional Escape ðŸŒŒ"
        android:paddingBottom="20dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/satoshi_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/imgAlbumBack3"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nectar"
        android:alpha="0.9"
        android:translationX="-50dp"
        android:translationY="15dp"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toBottomOf="@id/titleAlbum3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgAlbumBack4"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nectar"
        android:alpha="0.9"
        android:translationX="50dp"
        android:translationY="15dp"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toTopOf="@id/imgAlbumBack3"
        app:layout_constraintStart_toStartOf="@id/imgAlbumBack3"
        app:layout_constraintEnd_toEndOf="@id/imgAlbumBack3"/>

    <ImageView
        android:id="@+id/imgAlbum3"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nectar"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toTopOf="@id/imgAlbumBack4"
        app:layout_constraintStart_toStartOf="@id/imgAlbumBack4"
        app:layout_constraintEnd_toEndOf="@id/imgAlbumBack4"/>

    <ImageView
        android:id="@+id/btnPlay3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_button_background"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play_button"
        app:layout_constraintBottom_toBottomOf="@id/imgAlbum3"
        app:layout_constraintEnd_toEndOf="@id/imgAlbum3"
        android:onClick="openSpotifyAlbum"/>

    <TextView
        android:id="@+id/descText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nectar captures Jojiâ€™s vulnerability like never before, with haunting melodies and raw lyrics that take listeners on an emotional journey. Itâ€™s a must-listen for anyone in their feels."
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/satoshi_regular"
        app:layout_constraintTop_toBottomOf="@id/imgAlbum3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/infoContainer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/descText3"
        app:layout_constraintStart_toStartOf="parent">
        <!-- Artist -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_artist"
                app:tint="#858585"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joji"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <!-- Songs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_song"
                app:tint="#858585"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 Songs"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <!-- Reviews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_reviews"
                app:tint="#858585"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.2M Reviews"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
