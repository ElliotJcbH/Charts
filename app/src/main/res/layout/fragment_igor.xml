<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".IgorFragment"
    android:paddingHorizontal="15dp"
    android:layout_marginTop="25dp"
    >

    <!-- Album Cover -->
    <ImageView
        android:id="@+id/albumCover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/igor"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>
    <!-- Title -->
    <TextView
        android:id="@+id/titleTalk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talk of the Town ðŸ”Š"
        android:textSize="24sp"
        android:paddingBottom="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/satoshi_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Left Background Cover -->
    <ImageView
        android:id="@+id/imgTalkBack1"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/igor"
        android:alpha="0.4"
        android:translationX="-50dp"
        android:translationY="15dp"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toBottomOf="@id/titleTalk1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Right Background Cover -->
    <ImageView
        android:id="@+id/imgTalkBack2"
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/igor"
        android:alpha="0.6"
        android:translationX="50dp"
        android:translationY="15dp"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toTopOf="@id/imgTalkBack1"
        app:layout_constraintStart_toStartOf="@id/imgTalkBack1"
        app:layout_constraintEnd_toEndOf="@id/imgTalkBack1"/>

    <!-- Foreground Album Cover -->
    <ImageView
        android:id="@+id/imgTalk"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/igor"
        android:background="@drawable/rounded_album"
        app:layout_constraintTop_toTopOf="@id/imgTalkBack2"
        app:layout_constraintStart_toStartOf="@id/imgTalkBack2"
        app:layout_constraintEnd_toEndOf="@id/imgTalkBack2"/>

    <!-- Play Button -->
    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_button_background"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play_button"
        app:layout_constraintBottom_toBottomOf="@id/imgTalk"
        app:layout_constraintEnd_toEndOf="@id/imgTalk"
        android:onClick="openSpotifyAlbum"/>

    <!-- Description -->
    <TextView
        android:id="@+id/descText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IGOR has captured the most attention from other users. Maybe give it a listen?"
        android:textSize="14sp"
        android:fontFamily="@font/satoshi_regular"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgTalk"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Info Section -->
    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/descText1"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Artist -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_artist"
                app:tint="#858585"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tyler, the Creator"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Songs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_song"
                app:tint="#858585"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Songs"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Reviews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_reviews"
                app:tint="#858585"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.1M Reviews"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
